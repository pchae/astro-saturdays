---
import { Image } from 'astro:assets';

interface Props {
  /* Main heading text */
  heading: string;
  /* Optional subline text to display below heading */
  subline?: string;
}

const {
  heading = "We bridge the gap between design and technology",
  subline,
} = Astro.props;
---

<section id="hero">
    <div class="w-full min-h-5/6 bg-slate-500 border-y border-blue-200">
        <div class="mx-auto max-w-[var(--breakpoint-2xl)] px-4 sm:px-6 lg:px-8 py-24 bg-slate-200">
            <div class="py-12 border-1 border-red-200">
                <h1 class="text-3xl md:text-4xl lg:text-6xl leading-tight text-pretty font-bold tracking-tight text-center">
                    {heading}
                </h1>
                {subline && (
                    <p class="mt-6 text-xl md:text-2xl lg:text-3xl leading-normal text-pretty text-center mx-auto">
                        {subline}
                    </p>
                )}
            </div>
        </div>
    </div>
</section>

