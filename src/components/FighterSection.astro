---
import FighterCard from './FighterCard.astro';

interface Fighter {
  id: string;
  name: string;
  image?: string;
  organization?: string;
}

interface Props {
  title: string;
  fighters: Fighter[];
}

const { title, fighters = [] } = Astro.props;
---

<div class="pb-12">
  <div id="title">
    <h1 class="text-2xl font-bold text-white">
      {title}
    </h1>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 xl:grid-cols-6 2xl:grid-cols-8 gap-4 pt-4">
    {fighters.map(fighter => (
      <FighterCard fighter={fighter} />
    ))}
    
    {fighters.length === 0 && (
      <div class="col-span-full text-center py-8">
        <p class="text-gray-400">No fighters available</p>
      </div>
    )}
  </div>
</div>
