---
// src/components/DashboardHeader.astro
interface Props {
  projectName?: string;
  serviceName?: string;
  status?: string;
  description?: string;
}

const { 
  projectName = "Railway", 
  serviceName = "mma-api", 
  status = "ONLINE", 
  description = "Deploys from GitHub" 
} = Astro.props;
---

<header>
  <!-- Heading -->
  <div class="flex flex-col items-start justify-between gap-x-8 gap-y-1 bg-gray-800/10 border border-white/20 px-4 py-8 sm:flex-row sm:items-center lg:px-8">
    <div>
      <div class="flex items-center gap-x-2">
        <div class="flex-none rounded-full bg-green-400 p-1 text-green-400">
          <div class="h-2 w-2 rounded-full bg-current"></div>
        </div>
        <h1 class="flex gap-x-2 text-base leading-4">
          <span class="font-bold text-white">{projectName}</span>
          <span class="text-gray-600">/</span>
          <span class="font-bold text-white">{serviceName}</span>
        </h1>
      </div>
      <p class="mt-2 text-xs leading-6 text-gray-400">
        {description}
      </p>
    </div>
    <div class="order-first flex-none rounded-full bg-green-400/10 px-4 py-2 text-sm font-medium text-green-400 ring-1 ring-inset ring-gray-400/30 sm:order-none">
      {status}
    </div>
  </div>
</header> 