---
// src/components/AdminToolCard.astro
interface AdminTool {
  name: string;
  description: string;
  to: string;
  icon: string;
}

interface Props {
  tool: AdminTool;
}

const { tool } = Astro.props;
---

<a 
  href={tool.to}
  class="bg-gray-800/30 border border-white/10 rounded-lg p-6 hover:bg-gray-700/30 transition-colors duration-200"
>
  <div class="flex items-center gap-4">
    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-700 flex items-center justify-center">
      <!-- For simplicity, we'll use a placeholder for the icon -->
      <span class="h-5 w-5 text-green-400">
        <!-- Icon placeholder -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
          <path d="M12 22v-5" />
          <path d="M9 8H2.5a1.5 1.5 0 0 0 0 3h4a1.5 1.5 0 0 1 0 3H2.5" />
          <path d="M14 8h7.5a1.5 1.5 0 0 1 0 3h-4a1.5 1.5 0 0 0 0 3H21.5" />
        </svg>
      </span>
    </div>
    <div>
      <h3 class="text-lg font-medium text-white">
        {tool.name}
      </h3>
      <p class="mt-1 text-sm text-gray-400">
        {tool.description}
      </p>
    </div>
  </div>
</a> 