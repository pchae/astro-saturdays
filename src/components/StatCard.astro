---
// src/components/StatCard.astro
interface Stat {
  name: string;
  value: string;
  unit?: string;
}

interface Props {
  stat: Stat;
}

const { stat } = Astro.props;
---

<div class="bg-gray-800/10 border border-white/20 px-4 py-8 sm:px-6 xl:px-8">
  <dt class="text-sm font-medium leading-6 text-gray-400">
    {stat.name}
  </dt>
  <dd class="mt-2 flex items-baseline gap-x-2">
    <div class="text-2xl font-semibold tracking-tight text-white">
      {stat.value}
    </div>
    {stat.unit && (
      <div class="text-sm text-gray-400">
        {stat.unit}
      </div>
    )}
  </dd>
</div> 